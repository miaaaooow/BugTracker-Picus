<h1>Create a New Project</h1>

<% form_for(@project) do |f| %>
  
  <% f.error_messages %>
  <p>
    <%= f.label :name  %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  
  <% f.error_messages %>
  <br />
  <p>
    <%= f.submit 'Create in Picus', :method => 'post' %>
  </p>
<% end %>

<%= link_to 'Back', projects_path %>
